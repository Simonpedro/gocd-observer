{
    "manifest_version": 2,

    "name": "GoCD Observer",
    "description":
        "Allow observe and automate GoCD related tasks.",
    "version": "1.0.0",

    "page_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "content_scripts": [
        {
          "matches": ["http://ci.jemstep.com:8153/*"],
          "js": ["js/contentScript.js"]
        }
      ],

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": ["storage", "declarativeContent", "activeTab"]
}
        